<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Project1_Ria</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/project1_ria</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>TecnologieWeb</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter> 
      <filter-name>LoggedUser</filter-name>
      <filter-class>it.polimi.tiw.missions.filters.LoggedUser</filter-class> 
 </filter> 
  <filter> 
      <filter-name>NoCacher</filter-name>
      <filter-class>it.polimi.tiw.missions.filters.NoCacher</filter-class> 
 </filter> 
  <filter> 
      <filter-name>GuestCheck</filter-name>
      <filter-class>it.polimi.tiw.missions.filters.GuestCheck</filter-class> 
 </filter>
  
  <filter-mapping> 
    <filter-name>NoCacher</filter-name> 
    <url-pattern>/HomeCS.html</url-pattern> 
 </filter-mapping> 
 
 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>